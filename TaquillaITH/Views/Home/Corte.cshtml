@using TaquillaITH.ViewModels
@{
    List<DaySalesViewModel> daySales = ViewBag.DaySales;
    var normalQuantity = 0;
    var threeQuantity = 0;
    var vipQuantity = 0;
    var normalAmount = 0;
    var threeAmount = 0;
    var vipAmount = 0;
    var cash = 0.0M;
    var credit = 0.0M;
    var points = 0.0M;
    var totalAmount = 0.0M;
    var date = daySales.FirstOrDefault().SaleDate;
}
<div class="text-center container">
    <div class="row">
        <div class="col-12">
            <h1 class="display-4">Corte generado</h1>
        </div>
    </div>
    <div class="row mt-2 justify-content-md-center">
        <div class="col-6">
            <p>Al dia de: @date</p>
        </div>
    </div>
        <div class="row mt-2 justify-content-md-center">
    </div>
    <div class="row">
        <div class="col-12">
            <div id="container">

                <div style="text-align:left;">
                    @foreach (var item in daySales)
                    {
                        <p><b>Venta: </b>@item.saleId</p>
                        <p><b>Película: </b>@item.Name</p>
                        <p><b>Horario: </b>@item.time</p>
                        <p><b>Tipo de boleto: </b>@item.TipoBoletoId</p>
                        <p><b>Efectivo: </b>@item.Cash</p>
                        <p><b>Credito: </b>@item.CreditCard</p>
                        <p><b>Credito: </b>@item.RewardPoints</p>
                        <p><b>Total: </b>@item.TotalAmount</p
                        <p><b>Credito: </b>@item.TipoBoletoId</p>
                        <p>------</p>
                        <br />
                        <br />
                    }
                </div>





