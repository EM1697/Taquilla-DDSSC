        var id = $("#membershipNumber").val();
        $.ajax({
        url: "/api/Booth/GetMembership",
        type: 'GET',
        data: {'id':id},
            success: function (data) {
                $("#membership").hide();
                $("#points").show();
                $("#membershipId").text(data.id_Membresia);
                $("#membershipOwner").text(data.nombre);
                $("#membershipPoints").text(data.puntos);
